<%= form_for(:session, url: login_path) do |form| %>

  <div class="field">
    <label for="user_name">Nome</label>
    <%= form.text_field :name, id: :user_name %>
  </div>

  <div class="field">
    <label for="user_password">Password</label>
    <%= form.password_field :password, id: :user_password %>
  </div>

  <div class="actions">
    <%= form.submit "Accedi" %>
  </div>
<% end %>