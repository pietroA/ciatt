<% if logged_in?%>
<div>

  <!-- Nav tabs -->
  <ul class="nav nav-tabs" role="tablist">
    <li role="presentation" class="active">
      <a href="#messages" aria-controls="messages" role="tab" data-toggle="tab">
        <i class="fa fa-comments-o"></i>
      </a>
    </li>
    <li role="presentation">
      <a href="#users" aria-controls="users" role="tab" data-toggle="tab">
        <i class="fa fa-users"></i>
      </a>
    </li>
    <li role="presentation">
      <a href="#profile" aria-controls="profile" role="tab" data-toggle="tab">
        <i class="fa fa-user-circle-o"></i>
      </a>
    </li>
    <li role="presentation"><%= link_to '', logout_path, class: "fa fa-sign-out", method: :delete %></a></li>
  </ul>

  <!-- Tab panes -->
  <div class="tab-content">
    <div role="tabpanel" class="tab-pane" id="users">
      <div class="list-group">
        <%= render @users %>
      </div>
    </div>
    <div role="tabpanel" class="tab-pane active" id="messages">
      <div class="list-group">
        <%= render @chats %>
      </div>
    </div>
    <div role="tabpanel" class="tab-pane" id="profile">
      <div class="central-little-div">
        <%= render 'users/form', user: current_user %>
      </div>
    </div>
  </div>

</div>
<% else %>
<div class="central-little-div homepage text-center">
    <h1 class="">Ciatt</h1>
    <a  href="/login" class="btn btn-lg btn-default">Sign in</a>
    <a  href="/signup" class="btn btn-lg btn-default">Register</a>
</div>
<% end %>